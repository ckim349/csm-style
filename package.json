{
  "name": "csm-style",
  "displayName": "csm-style",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.94.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:python"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "python",
        "extensions": [
          ".py"
        ],
        "aliases": [
          "Python"
        ]
      }
    ],
    "commands": [
      {
        "command": "csm-style.ignoreSpecificViolation",
        "title": "Ignore This Violation"
      },
      {
        "command": "csm-style.ignoreSuggestion",
        "title": "Ignore Style Violation",
        "category": "CSM Style"
      },
      {
        "command": "csm-style.manageIgnored",
        "title": "Manage Ignored Violations",
        "category": "CSM Style"
      },
      {
        "command": "csm-style.clearAllIgnored",
        "title": "Clear All Ignored Violations",
        "category": "CSM Style"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "csm-style.ignoreSpecificViolation",
          "when": "false"
        },
        {
          "command": "csm-style.ignoreSuggestion",
          "when": "editorLangId == python"
        },
        {
          "command": "csm-style.manageIgnored"
        },
        {
          "command": "csm-style.clearAllIgnored"
        }
      ]
    }
  },
  "files": [
    "scripts/**"
  ],
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.94.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2"
  }
}
